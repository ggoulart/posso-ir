{
  "name": "typescript-base-project",
  "version": "1.0.0",
  "description": "typescript template project",
  "main": "index.js",
  "scripts": {
    "build": "tsc && npm run copy-files",
    "copy-files": "cp -rp public/ ./dist/public",
    "start": "node dist/src/index.js",
    "start:local": "ts-node-dev --transpile-only src/index.ts | pino-pretty -c",
    "test": "npm test:unit && npm test:functional",
    "test:unit": "jest",
    "test:functional": "jest --projects ./test --forceExit --runInBand",
    "lint:check": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix",
    "style:check": "prettier --check 'src/**/*.ts' 'test/**/*.ts'",
    "style:fix": "prettier --write 'src/**/*.ts' 'test/**/*.ts'"
  },
  "author": "Gustavo Goulart",
  "license": "ISC",
  "dependencies": {
    "@overnightjs/core": "^1.7.5",
    "async-redis": "^1.1.7",
    "axios": "^0.21.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-pino-logger": "^6.0.0",
    "module-alias": "^2.2.2",
    "node-html-parser": "^3.1.0",
    "pino": "^6.11.2"
  },
  "devDependencies": {
    "@types/async-redis": "^1.1.1",
    "@types/axios": "^0.14.0",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/express-pino-logger": "^4.0.2",
    "@types/jest": "^26.0.20",
    "@types/module-alias": "^2.0.0",
    "@types/node": "^14.14.34",
    "@types/pino": "^6.3.6",
    "@types/redis": "^2.8.28",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "eslint": "^7.22.0",
    "jest": "^26.6.3",
    "pino-pretty": "^4.7.1",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.3",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.3"
  }
}
